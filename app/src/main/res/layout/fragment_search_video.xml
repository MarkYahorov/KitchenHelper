<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchVideoFragment">

    <EditText
        android:id="@+id/search_video_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/search_video_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_video_btn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:src="@drawable/search_ic"
        app:layout_constraintBottom_toBottomOf="@+id/search_video_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_video_edit_text"
        app:layout_constraintTop_toTopOf="@+id/search_video_edit_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_video_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_video_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>